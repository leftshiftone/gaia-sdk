{
    "name": "@gaia/sdk",
    "version": "0.0.0",
    "description": "JavaScript SDK for the GAIA ecosystem.",
    "main": "dist/all.js",
    "dependencies": {
        "crypto-js": "^3.1.9-1"
    },
    "devDependencies": {
        "@babel/cli": "^7.2.3",
        "@babel/core": "^7.3.4",
        "@babel/preset-env": "^7.3.4",
        "@types/crypto-js": "^3.1.43",
        "@types/jest": "^24.0.9",
        "@types/node": "^10.7.1",
        "@types/sinon": "^7.0.5",
        "html-webpack-plugin": "^3.2.0",
        "import-glob-loader": "^1.1.0",
        "jest": "^23.6.0",
        "jest-junit": "5.1.0",
        "release-it": "^10.3.1",
        "sinon": "^7.2.3",
        "sonarqube-scanner": "2.1.2",
        "style-loader": "^0.22.1",
        "stylelint": "^9.5.0",
        "stylelint-config-recommended": "^2.1.0",
        "stylelint-webpack-plugin": "^0.10.5",
        "ts-jest": "^24.0.0",
        "ts-loader": "^4.5.0",
        "tslint": "^5.11.0",
        "tslint-config-airbnb": "^5.10.0",
        "tslint-loader": "^3.6.0",
        "typescript": "^3.0.1",
        "uglifyjs-webpack-plugin": "^1.3.0",
        "webpack": "^4.16.5",
        "webpack-cli": "^3.1.0",
        "webpack-dev-server": "^3.1.11"
    },
    "jest-junit": {
        "suiteName": "Frontend Tests",
        "suiteNameTemplate": "{filename}",
        "output": "./test-results/test/TEST-Frontend.xml",
        "classNameTemplate": "{classname}-{title}",
        "titleTemplate": "{classname}-{title}"
    },
    "scripts": {
        "webpack:dev": "webpack-dev-server --open --mode=development",
        "webpack:build": "webpack --mode=production",
        "ts:build": "tsc -p . --outDir build",
        "babel:transpile": "yarn run babel build --out-dir dist --ignore dist/libs/ --presets=@babel/preset-env",
        "assemble": "npm run ts:build && npm run webpack:build",
        "build": "npm run test && npm run ts:build && npm run babel:transpile && npm run webpack:build && rm -rf ./build",
        "test": "jest",
        "lint": "stylelint tslint src/**/*.ts",
        "sonarqube": "jest --env=jsdom --coverage && sonar-scanner -Dsonar.host.url=$SONAR_HOST_URL -Dsonar.login=$SONAR_LOGIN",
        "release:major": "release-it major --no-git.requireCleanWorkingDir",
        "release:minor": "release-it minor --no-git.requireCleanWorkingDir",
        "release:patch": "release-it patch --no-git.requireCleanWorkingDir --no-git.requireUpstream"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/leftshiftone/gaia-js-sdk.git"
    },
    "keywords": [
        "sdk",
        "gaia",
        "leftshiftone"
    ],
    "author": "Leftshift One Software GmbH <core-devs@leftshift.one>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/leftshiftone/gaia-js-sdk/issues"
    },
    "homepage": "https://github.com/leftshiftone/gaia-js-sdk",
    "publishConfig": {
        "registry": "https://registry.npmjs.org/"
    }
}
